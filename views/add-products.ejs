<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

    a,
    btn,
    p {
        font-family: "Poppins", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    h1,
    h2,
    h3 {
        font-family: "Poppins", sans-serif;
        font-weight: 600;
        font-style: normal;
    }

    input {
        padding: 8px;
        border-radius: 6px;
        margin-top: 6px;
        margin-bottom: 6px;
        outline: none;
        border: none;
    }

    input:focus {
        border: 3px rgb(236, 103, 63) solid;
    }

    button {
        background-color: rgb(236, 103, 63);
        outline: none;
        border: none;
        color: white;
        width: 100%;
        height: 56px;
        border-radius: 6px;
        text-decoration: none;
        cursor: pointer;
    }

    button:hover {
        background-color: rgba(241, 120, 83, 0.664);
        border: #FFF solid 1px;
    }
</style>

<body style="margin: 0px;">
    <%- include('./components/AdminNavbar.ejs'); %>

        <div style="display: flex; justify-content: center; width: 100%; ">
            <form method="POST" action="/admin/add-product" style="background-color: darksalmon; margin-top: 120px; border-radius: 12px; display:grid; padding: 24px; width: 33%;">
                <input name="title" placeholder="Title" required />
                <input name="price" placeholder="Price" required />
                <input name="description" placeholder="Description" required />
                <input name="imageUrl" placeholder="imageURL" required />

                <input type="submit" class="btn" style="height: 32px; margin-top: 8px;" value="Add Product">
            </input>
            </form>
        </div>
</body>